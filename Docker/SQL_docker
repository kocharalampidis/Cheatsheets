// To download the MySQL Community Edition image, run this command:

docker run --name=test-mysql mysql



// Start a new Docker container for the MySQL Community Server with this command:

docker run --detach --name=test-mysql --restart on-failure -d --env="MYSQL_ROOT_PASSWORD=mypassword" mysql

// To monitor the output from the container:

docker logs mysql1

// Connecting to MySQL Server from within the Container

docker exec -it mysql1 mysql -u root -p


docker stop mysql1
docker rm mysql1



// Retrieve the IP address of that container in order to access it.

docker inspect test-mysql

// Connecting to mysql container
sudo apt-get install mysql-client

// Access the MySQL server
 mysql -uroot -pmypassword -h 172.17.0.20 -P 3306
